package com.mobile.signalFlags {		import flash.display.MovieClip;	import flash.events.*		public class inputField extends MovieClip {		private var _stringData:String="";		public function inputField() {			// constructor code			this.addEventListener(Event.ADDED_TO_STAGE, init);					}				public function set kbActive(b:Boolean):void		{			(b) ? activate() : deactivate() ;		}				private function init(e:Event):void		{			clearField();		}				public function clearField():void		{			this.field.text == "";		}				private function activate():void		{			stage.focus =  this.field;			field.addEventListener(TextEvent.TEXT_INPUT, keyHandler);		}				private function deactivate():void		{			field.removeEventListener(TextEvent.TEXT_INPUT, keyHandler);		}				private function keyHandler(k:Event):void		{					}	}	}