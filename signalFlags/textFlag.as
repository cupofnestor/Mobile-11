package com.mobile.signalFlags {		public class textFlag extends flagStatic {						public function textFlag() {			// constructor code		}				public override function set letter(val:String):void		{						switch (val)			{				case "!":					altText("First Substitute");					break;				case "@":					altText("Second Substitute");					break;				case "#":					altText("Third Substitute");					break;				case "$":					altText("Fourth Substitute");					break;				default:					var flVal:String;					this.field.text = val;					this.alt_field.text = "";			}			flVal = val.toLowerCase();			this.miniFlag_mc.gotoAndStop(flVal);					}				public function altText(str:String):void		{			this.field.text = "";			this.alt_field.text = str;		}			}	}