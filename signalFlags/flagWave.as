package com.mobile.signalFlags {		import flash.display.MovieClip;	import flash.events.Event;	import caurina.transitions.*;			public class flagWave extends MovieClip {		private var my_initY:Number;		private var my_targetY:Number;		private var my_letter:String;				public function flagWave(l:String) {			// constructor code			my_letter=l;			addEventListener(Event.ADDED_TO_STAGE, init);					}				private function init(e:Event):void		{			//trace("I am a flag, i represent the letter "+my_letter+" ,  my initY= "+my_initY+" , my targetY = "+my_targetY);						this.flag_mc.gotoAndStop(my_letter);			raise();					}				public function set initY(Y:Number):void		{			my_initY = Y;			this.y =  Y;		}				public function set targetY(tY:Number):void		{			my_targetY = tY;		}				public function raise():void		{			//trace ("Raising!");			anim(my_targetY,"flagUp");		}				public function lower():void		{			anim(my_initY,"flagDown");		}				public function anim(tY:Number, arg:String)		{			trace ("Animating to "+tY+"!"+"::"+arg);			Tweener.addTween(this, {				y:tY,				delay: 0,				transition:"easeInOutSine",				time:2,				onComplete:animComplete,				onCompleteParams: [arg]});		}				private function animComplete(_arg:String):void		{			trace("::flagWave:: Animation Complete, dispatching "+_arg);			dispatchEvent(new Event(_arg));		}	}	}						//flag_meta.flag_mc.						/*						*/