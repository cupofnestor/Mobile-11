package com.mobile.signalFlags {		import flash.display.MovieClip;	import fl.text.TLFTextField;			public class flagList extends MovieClip {		public var flagMC:Array = new Array();		public var messageText:TLFTextField;		private var flagH:Number;							public function set flags(_flags:Array):void		{			flagMC = [this.flag1,this.flag2,this.flag3,this.flag4,this.flag5];			flagH = flag1.height;			messageText = this.mess;			messLength = _flags.length;			for (var i:Number = 0; i<_flags.length; i++)			{				flagMC[i].letter = _flags[i];			}		}				public function set messLength(v:Number):void		{			for  (var j:Number = 0; j<flagMC.length; j++)			{				var isVis:Boolean = (j<v);				flagMC[j].visible = isVis;				 			}			this.mess.height = this.bracket.height = flagH*v;		}				public function set flMessage(val:String):void		{			this.mess.condenseWhite = true;			this.mess.text = val;		}				public function setup(parsed:Array)		{			flMessage = parsed.pop();			flags = parsed;		}	}	}