package com.mobile.signalFlags {		import flash.display.MovieClip;	import caurina.transitions.*;	import flash.events.Event;	import flash.events.TimerEvent;	import flash.utils.Timer;		public class paper extends MovieClip {				var tX:Number=68;		var tY:Number=72;		var iX:Number;		var iY:Number;		var tR:Number=0;		var iR:Number = 90;		var tween:String = "easeInSine";		///set in config		var H:String;		var B:String;		var tout:Timer;		public function paper(_H:String="Header",_B:String="body text",_tout:Number=2000) {			// constructor code			trace("New Paper");			H=_H;			B=_B;			cacheAsBitmap = true;				addEventListener(Event.ADDED_TO_STAGE,init);			tout=new Timer(_tout,1);			tout.addEventListener(TimerEvent.TIMER_COMPLETE,timeout);		}				private function init(e:Event):void		{			iX = -this.width;			iY= -this.height;			this.x=iX;			this.y=iY;			this.rotation=iR;			on();			this.paper_text_mc.paper_header.text=H;			this.paper_text_mc.paper_body.text=B;					}				private function timeout(t:TimerEvent):void		{			tout.removeEventListener(TimerEvent.TIMER_COMPLETE,timeout);			off();		}						public function on():void		{			animate(tX,tY,tR,"paperOn");		}		public function off():void		{			animate(iX,iY,iR,"paperOff");					}				private function animate(_tX:Number,_tY:Number,_tR:Number,animMode:String):void		{			Tweener.addTween(this, {				y:_tY,				x:+tX,				rotation:_tR,				delay: 0,				transition:tween,				time:1,				onComplete:animComplete,				onCompleteParams:[animMode]});		}				private function animComplete(_animMode:String):void		{			(_animMode == "paperOn") ? tout.start() : null;			dispatchEvent(new Event(_animMode));		}	}	}