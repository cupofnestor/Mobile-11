package com.mobile.ggc {	import flash.system.System;	import flash.events.EventDispatcher;	import flash.events.Event;	public class ggDealer extends EventDispatcher{		var decks:ggDeck = new ggDeck;		var firstname:String; //This is a dummy variable		//var activePlayer:Player // need to keep track of active player here???		var _players:Object = {};		var thePlayers:ggPlayers;		var currentPlayerName:String = "";				//Config First		public function set config(cfg:XML):void		{			//set local config vars			firstname = cfg.firstname.toString();			decks.config = new XML(cfg.deck);						//allow for garbagecollection of XML.			System.disposeXML(cfg);			cfg = null;		}				//Players Second		public function set players(_p:ggPlayers):void		{						thePlayers = _p;			decks.players = thePlayers.toObject();						thePlayers.addEventListener(PlayerEvent.HIT_ME, dealTwo);					}								//Player wants two cards.		private function dealTwo(e:PlayerEvent)		{						currentPlayerName = e.data;			decks.addEventListener(DeckEvent.PULLED, cardPulled);			decks.drawTwo(currentPlayerName);		}				private function cardPulled(d:DeckEvent):void		{			decks.removeEventListener(DeckEvent.PULLED, cardPulled);			dispatchEvent(new DealerEvent(DealerEvent.CARDS_DEALT, false, false, d.cards))		}				public function playerChoice(cardId:Number):void		{					}			}	}