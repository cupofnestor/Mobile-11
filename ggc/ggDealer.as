package com.mobile.ggc {	import flash.system.System;	import flash.events.EventDispatcher;	import flash.events.Event;	public class ggDealer extends EventDispatcher{		var decks:ggDeck = new ggDeck;		var firstname:String; //This is a dummy variable		//var activePlayer:Player // need to keep track of active player here???		var _players:Object = {};		var currentPlayer:String = "";		//Config First		public function set config(cfg:XML):void		{			//set local config vars			firstname = cfg.firstname.toString();			decks.config = new XML(cfg.deck);						//allow for garbagecollection of XML.			System.disposeXML(cfg);			cfg = null;		}				//Players Second		public function set players(_p:Object):void		{			// constructor code			_players = _p;						decks.players = _players;								}				//called by ?? to draw two cards card		public function dealTwo(p:String)		{			currentPlayer = p;			decks.addEventListener(DeckEvent.PULLED, cardPulled);			decks.drawTwo(p);		}				private function cardPulled(d:DeckEvent):void		{			decks.removeEventListener(DeckEvent.PULLED, cardPulled);			dispatchEvent(new DealerEvent(DealerEvent.CARDS_DEALT, false, false, d.cards))		}				public function chooseCard(cardId:Number):void		{			decks.choiceMade(p, cardId):void		}			}	}