package com.mobile.GulfLinks {	import flash.utils.Dictionary;	public class linkCollection {				private var allLinks:Array = new Array();		private var theLinks:Array = new Array();				public function linkCollection() {			// constructor code		}				public function set links(val:Array):void		{			theLinks = val;			allLinks = val;		}				public function resetLinks():void		{			theLinks = allLinks;		}				//main method returns an object containing two arrays: first is a list of link objects which are tagged with the argument		//second is a list of tags which are on at least one of the link objects		public function linksByTag(_t:String):Object		{			//create			var ret:Object = new Object();			var _links:Array = new Array();			for each (var _l:link in theLinks)			{				(_l.containsTag(_t)) ? _links.push(_l) : null;			}			ret.links = new Array(); 			theLinks = _links;			ret.links = _links;			var _tags:Array = tagsFromLinks(_links);			ret.tags = new Array();			ret.tags = removeDupes(_tags);			_links = null;			return ret;		}				//utility to pull taglists from link objects		public function tagsFromLinks(_links:Array):Array		{			var ret:Array = new Array();			for each (var _l:link in _links)			{				ret = ret.concat(_l.tagsArray);			}			return ret;		}						//removes dupes in an array		private function removeDupes(src:Array):Array		{			var dict:Dictionary = new Dictionary();			var arr:Array = src;			var len:int = arr.length;			for (var i:int = 0; i<len; ++i)			{				var str:String = arr[i] as String;				if (!dict[str])				{					dict[str] = true;				}				else				{					arr.splice(i,1);					i--; len--;				}			}						dict = null;			return arr;		}	}	}