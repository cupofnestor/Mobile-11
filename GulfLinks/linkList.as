package com.mobile.GulfLinks {		import flash.display.MovieClip;	import com.adobe.xml.syndication.atom.Link;	import flash.text.StyleSheet;	import flash.html.HTMLLoader;	import flash.events.*;	public class linkList extends MovieClip {		private var window:HTMLLoader;		private var document:XML;		private var head:XML = <head>									<link rel="stylesheet" type="text/css" href="http://gq.monadnock.org/gl_tmp//style.css" />									<link rel="stylesheet" type="text/css" href="http://gq.monadnock.org/gl_tmp//FONT/fonts.css" />								</head>;		private var body:XML;				private var theList:XML;				public function linkList() {			// constructor code			window = new HTMLLoader();			window.paintsDefaultBackground = false;						addEventListener(Event.ADDED_TO_STAGE, init);		}				private function init(e:Event):void		{			window.width = this.width;			window.height = this.height;			addChild(window);		}				public function resetList():void		{			document = <html></html>;			updateDisplay();		}				public function linkUpdate(_a:Array):void		{									document = <html></html>;			document.appendChild(head);			body = 				<body>									<div class="wrap"> 										<h1 class="title">Touch a Link to Explore</h1>										<div class = "links" />									</div>								</body>;											for each (var _l:link in _a)			{				body.div.div.appendChild(_l.htmlLink);			}			document.body=body;			updateDisplay();		}			private function updateDisplay():void		{			var loadStr:String = document.toString();			window.addEventListener(Event.COMPLETE, loadComplete);			window.loadString(loadStr);					}				private function loadComplete(e:Event)		{			trace(e.target);		}				}	}